<Window x:Class="KdxDesigner.Views.IOConversionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="IO割付表変換" Height="700" Width="1200" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="IO割付表Excel変換"
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- 変換設定 -->
        <GroupBox Grid.Row="1" Header="変換設定" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- PLC選択 -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="PLC:"
                           VerticalAlignment="Center" Margin="0,0,10,10"/>
                <ComboBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                          ItemsSource="{Binding Plcs}"
                          SelectedItem="{Binding SelectedPlc}"
                          DisplayMemberPath="PlcName"
                          Margin="0,0,0,10"
                          Height="25"/>

                <!-- Excelファイル選択 -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Excelファイル:"
                           VerticalAlignment="Center" Margin="0,0,10,10"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                         Text="{Binding SourceFilePath}"
                         IsReadOnly="True"
                         Margin="0,0,10,10"
                         Height="25"/>
                <Button Grid.Row="1" Grid.Column="2" Content="参照..."
                        Command="{Binding SelectExcelFileCommand}"
                        Width="80" Height="25" Margin="0,0,0,10"/>

                <!-- シート名 -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="シート名:"
                           VerticalAlignment="Center" Margin="0,0,10,10"/>
                <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                         Text="{Binding SheetNames, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,10"
                         Height="25"
                         ToolTip="カンマ区切りで複数のシート名を指定できます（例: Sheet1,Sheet2,Sheet3）"/>

                <!-- オプション -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="オプション:"
                           VerticalAlignment="Top" Margin="0,5,10,10"/>
                <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,0,10">
                    <CheckBox Content="●○情報を含む"
                              IsChecked="{Binding IncludeCircle}"
                              Margin="0,0,0,5"/>
                    <CheckBox Content="新名称ルールを使用"
                              IsChecked="{Binding UseNewNaming}"/>
                </StackPanel>

                <!-- 変換ボタン -->
                <Button Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                        Content="変換実行"
                        Command="{Binding ConvertExcelCommand}"
                        HorizontalAlignment="Left"
                        Width="120" Height="30"/>
            </Grid>
        </GroupBox>

        <!-- 変換結果データグリッド -->
        <GroupBox Grid.Row="2" Header="変換結果" Margin="0,0,0,10">
            <DataGrid ItemsSource="{Binding ConvertedIOs}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="アドレス" Binding="{Binding Address}" Width="100"/>
                    <DataGridTextColumn Header="PLC ID" Binding="{Binding PlcId}" Width="60"/>
                    <DataGridTextColumn Header="IOテキスト" Binding="{Binding IOText}" Width="100"/>
                    <DataGridTextColumn Header="Xコメント" Binding="{Binding XComment}" Width="150"/>
                    <DataGridTextColumn Header="Yコメント" Binding="{Binding YComment}" Width="150"/>
                    <DataGridTextColumn Header="Fコメント" Binding="{Binding FComment}" Width="150"/>
                    <DataGridTextColumn Header="IO名" Binding="{Binding IOName}" Width="120"/>
                    <DataGridTextColumn Header="説明" Binding="{Binding IOExplanation}" Width="150"/>
                    <DataGridTextColumn Header="場所" Binding="{Binding IOSpot}" Width="100"/>
                    <DataGridTextColumn Header="ユニット名" Binding="{Binding UnitName}" Width="100"/>
                    <DataGridTextColumn Header="システム" Binding="{Binding System}" Width="80"/>
                    <DataGridTextColumn Header="局番" Binding="{Binding StationNumber}" Width="80"/>
                    <DataGridTextColumn Header="IO名（裸）" Binding="{Binding IONameNaked}" Width="100"/>
                    <DataGridTextColumn Header="リンクデバイス" Binding="{Binding LinkDevice}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- ステータスバー -->
        <Border Grid.Row="3" Background="#F0F0F0" BorderBrush="#CCCCCC"
                BorderThickness="0,1,0,0" Padding="5" Margin="0,0,0,10">
            <TextBox Text="{Binding StatusMessage}"
                       FontStyle="Italic"/>
        </Border>

        <!-- ボタンエリア -->
        <StackPanel Grid.Row="4" Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="データベースに保存"
                    Command="{Binding SaveToDatabaseCommand}"
                    IsEnabled="{Binding HasConvertedData}"
                    Width="140" Height="35" Margin="0,0,10,0"/>
            <Button Content="クリア"
                    Command="{Binding ClearConvertedDataCommand}"
                    IsEnabled="{Binding HasConvertedData}"
                    Width="80" Height="35" Margin="0,0,10,0"/>
            <Button Content="閉じる"
                    Click="CloseButton_Click"
                    Width="80" Height="35"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="KdxDesigner.Views.ConnectionInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="接続情報" 
        Height="280" Width="400"
        MinHeight="250" MinWidth="300"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Topmost="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 接続情報表示エリア -->
        <Border Grid.Row="0" Background="LightGray" Margin="10" CornerRadius="5">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="接続の関係" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Background="LightBlue" CornerRadius="3" Padding="10,5">
                        <TextBlock Text="{Binding SelectedConnection.FromNode.DisplayName}" FontSize="14"/>
                    </Border>
                    <TextBlock Text=" → " FontSize="20" VerticalAlignment="Center" Margin="10,0"/>
                    <Border Background="LightGreen" CornerRadius="3" Padding="10,5">
                        <TextBlock Text="{Binding SelectedConnection.ToNode.DisplayName}" FontSize="14"/>
                    </Border>
                </StackPanel>
                
                <!-- 接続種別表示 -->
                <StackPanel Margin="0,15,0,0">
                    <TextBlock Text="接続の種類:" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock HorizontalAlignment="Center" FontSize="14">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="通常の接続（開始条件）"/>
                                <Setter Property="Foreground" Value="Blue"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedConnection.IsFinishConnection}" Value="True">
                                        <Setter Property="Text" Value="終了条件の接続"/>
                                        <Setter Property="Foreground" Value="Red"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    
                    <!-- 期間工程の場合のみ種別変更ボタンを表示 -->
                    <Button Width="150" Height="30" Margin="0,10,0,0"
                            Command="{Binding ChangeConnectionTypeCommand}" 
                            HorizontalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanChangeConnectionType}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Content>
                            <TextBlock>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="終了条件に変更"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedConnection.IsFinishConnection}" Value="True">
                                                <Setter Property="Text" Value="開始条件に変更"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Button.Content>
                    </Button>
                    
                    <!-- ToNodeが期間工程または複合工程でない場合の説明 -->
                    <TextBlock Text="※ 期間工程・複合工程への接続のみ種別変更可能です" 
                              Foreground="Gray" FontSize="12" 
                              HorizontalAlignment="Center" Margin="0,10,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CanChangeConnectionType}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- ボタンエリア -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="削除" Command="{Binding DeleteSelectedConnectionCommand}" 
                    Width="80" Height="30" Margin="5" Background="LightCoral"/>
            <Button Content="閉じる" Click="CloseButton_Click" 
                    Width="80" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
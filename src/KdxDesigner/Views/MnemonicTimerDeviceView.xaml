<Window x:Class="KdxDesigner.Views.MnemonicTimerDeviceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MnemonicTimerDevice一覧" Height="600" Width="1000"
        WindowStartupLocation="CenterOwner">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- フィルタ -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="MnemonicType:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox ItemsSource="{Binding MnemonicTypes}" 
                      SelectedItem="{Binding SelectedMnemonicType}"
                      DisplayMemberPath="TableName" Width="150" Margin="0,0,10,0"/>
            <TextBlock Text="フィルタ:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" 
                     Width="200"/>
        </StackPanel>

        <!-- データグリッド -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding FilteredTimerDevices}" 
                  AutoGenerateColumns="False" CanUserAddRows="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mnemonic" Binding="{Binding MnemonicName}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="レコード名" Binding="{Binding RecordName}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="タイマー名" Binding="{Binding TimerName}" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn Header="カテゴリ" Binding="{Binding CategoryName}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="PlcId" Binding="{Binding PlcId}" Width="60" IsReadOnly="True"/>
                <DataGridTextColumn Header="処理タイマー" Binding="{Binding ProcessTimerDevice}" Width="100"/>
                <DataGridTextColumn Header="外部タイマー" Binding="{Binding TimerDevice}" Width="100"/>
                <DataGridTextColumn Header="コメント1" Binding="{Binding Comment1}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 下部ボタン -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="閉じる" Width="100" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
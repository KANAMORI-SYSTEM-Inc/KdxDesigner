<Window x:Class="KdxDesigner.Views.MemoryDeviceListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="メモリデバイス一覧" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="AlternatingRowBackground" Value="#FFF8F8F8"/>
            <Setter Property="RowHeight" Value="25"/>
        </Style>
        
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF4A5F7F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5,0"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- ツールバー -->
        <ToolBar Grid.Row="0" Height="40">
            <Button Command="{Binding RefreshCommand}" Padding="10,5" Margin="5,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🔄" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="更新" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <Separator/>
            
            <TextBlock Text="フィルタ:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" 
                     Width="200" VerticalAlignment="Center" Margin="0,0,10,0"/>
            
            <TextBlock Text="タイプ:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox ItemsSource="{Binding MnemonicTypes}" 
                      SelectedValue="{Binding SelectedMnemonicType}"
                      SelectedValuePath="Id"
                      DisplayMemberPath="Name"
                      Width="150" VerticalAlignment="Center" Margin="0,0,10,0"/>
            
            <Button Command="{Binding ClearFilterCommand}" Padding="10,5">
                <TextBlock Text="フィルタクリア"/>
            </Button>
            
            <Separator/>
            
            <Button Command="{Binding ExportToCsvCommand}" Padding="10,5" Margin="5,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📄" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="CSV出力" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </ToolBar>
        
        <!-- 統計情報 -->
        <Border Grid.Row="1" Background="#FFF0F0F0" BorderBrush="#FFD0D0D0" BorderThickness="0,1" Padding="10,5">
            <StackPanel Orientation="Horizontal">
                <TextBlock FontWeight="Bold" Margin="0,0,20,0">
                    <Run Text="合計デバイス数: "/>
                    <Run Text="{Binding TotalMnemonicDeviceCount}" Foreground="Blue"/>
                </TextBlock>
                
                <TextBlock Margin="0,0,10,0">
                    <Run Text="工程: "/>
                    <Run Text="{Binding ProcessCount}" Foreground="DarkGreen"/>
                </TextBlock>
                
                <TextBlock Margin="0,0,10,0">
                    <Run Text="工程詳細: "/>
                    <Run Text="{Binding DetailCount}" Foreground="DarkGreen"/>
                </TextBlock>
                
                <TextBlock Margin="0,0,10,0">
                    <Run Text="操作: "/>
                    <Run Text="{Binding OperationCount}" Foreground="DarkGreen"/>
                </TextBlock>
                
                <TextBlock Margin="0,0,20,0">
                    <Run Text="シリンダ: "/>
                    <Run Text="{Binding CylinderCount}" Foreground="DarkGreen"/>
                </TextBlock>
                
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>
                
                <TextBlock Margin="10,0">
                    <Run Text="タイマー: "/>
                    <Run Text="{Binding TotalTimerDeviceCount}" Foreground="DarkOrange"/>
                </TextBlock>
                
                <TextBlock Margin="0,0,10,0">
                    <Run Text="速度: "/>
                    <Run Text="{Binding TotalSpeedDeviceCount}" Foreground="DarkOrange"/>
                </TextBlock>
            </StackPanel>
        </Border>
        
        <!-- メインコンテンツ -->
        <TabControl Grid.Row="2" SelectedIndex="{Binding SelectedTabIndex}" Margin="5">
            <!-- MnemonicDevice タブ -->
            <TabItem Header="メモリデバイス">
                <DataGrid ItemsSource="{Binding MnemonicDevices}" Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="60"/>
                        <DataGridTextColumn Header="Mnemonic ID" Binding="{Binding MnemonicId}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding MnemonicId}" Value="1">
                                            <Setter Property="Text" Value="工程"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding MnemonicId}" Value="2">
                                            <Setter Property="Text" Value="工程詳細"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding MnemonicId}" Value="3">
                                            <Setter Property="Text" Value="操作"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding MnemonicId}" Value="4">
                                            <Setter Property="Text" Value="シリンダ"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Record ID" Binding="{Binding RecordId}" Width="80"/>
                        <DataGridTextColumn Header="デバイスラベル" Binding="{Binding DeviceLabel}" Width="100"/>
                        <DataGridTextColumn Header="開始番号" Binding="{Binding StartNum}" Width="80"/>
                        <DataGridTextColumn Header="コイル数" Binding="{Binding OutCoilCount}" Width="80"/>
                        <DataGridTextColumn Header="PLC ID" Binding="{Binding PlcId}" Width="70"/>
                        <DataGridTextColumn Header="コメント1" Binding="{Binding Comment1}" Width="200"/>
                        <DataGridTextColumn Header="コメント2" Binding="{Binding Comment2}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            
            <!-- TimerDevice タブ -->
            <TabItem Header="タイマーデバイス">
                <DataGrid ItemsSource="{Binding TimerDevices}" Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mnemonic ID" Binding="{Binding MnemonicId}" Width="100"/>
                        <DataGridTextColumn Header="Record ID" Binding="{Binding RecordId}" Width="80"/>
                        <DataGridTextColumn Header="Timer ID" Binding="{Binding TimerId}" Width="80"/>
                        <DataGridTextColumn Header="Timer Category" Binding="{Binding TimerCategoryId}" Width="110"/>
                        <DataGridTextColumn Header="プロセスタイマー" Binding="{Binding ProcessTimerDevice}" Width="120"/>
                        <DataGridTextColumn Header="タイマーデバイス" Binding="{Binding TimerDevice}" Width="120"/>
                        <DataGridTextColumn Header="PLC ID" Binding="{Binding PlcId}" Width="70"/>
                        <DataGridTextColumn Header="Cycle ID" Binding="{Binding CycleId}" Width="80"/>
                        <DataGridTextColumn Header="コメント1" Binding="{Binding Comment1}" Width="150"/>
                        <DataGridTextColumn Header="コメント2" Binding="{Binding Comment2}" Width="150"/>
                        <DataGridTextColumn Header="コメント3" Binding="{Binding Comment3}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            
            <!-- SpeedDevice タブ -->
            <TabItem Header="速度デバイス">
                <DataGrid ItemsSource="{Binding SpeedDevices}" Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="80"/>
                        <DataGridTextColumn Header="シリンダID" Binding="{Binding CylinderId}" Width="100"/>
                        <DataGridTextColumn Header="デバイス" Binding="{Binding Device}" Width="150"/>
                        <DataGridTextColumn Header="PLC ID" Binding="{Binding PlcId}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
        
        <!-- ステータスバー -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <Button Content="閉じる" Command="{Binding CloseCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Padding="20,2" Margin="5,2"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
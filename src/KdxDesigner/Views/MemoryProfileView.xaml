<Window x:Class="KdxDesigner.Views.MemoryProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KdxDesigner.Views"
        mc:Ignorable="d"
        Title="メモリプロファイル管理" Height="600" Width="800"
        WindowStartupLocation="CenterOwner">
    
    <Window.Resources>
        <local:BoolToDefaultTextConverter x:Key="BoolToDefaultTextConverter"/>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- タイトル -->
        <TextBlock Grid.Row="0" Text="メモリプロファイル管理" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <!-- プロファイルリスト -->
        <GroupBox Grid.Row="1" Header="プロファイル一覧" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- プロファイルリスト -->
                <ListBox Grid.Column="0" ItemsSource="{Binding Profiles}" SelectedItem="{Binding SelectedProfile}" Margin="5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="3" Padding="5" Margin="2">
                                <StackPanel>
                                    <TextBlock FontWeight="Bold">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} {1}">
                                                <Binding Path="Name"/>
                                                <Binding Path="IsDefault" Converter="{StaticResource BoolToDefaultTextConverter}"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Description}" FontSize="11" Foreground="Gray"/>
                                    <TextBlock Text="{Binding UpdatedAt, StringFormat='更新日: {0:yyyy/MM/dd HH:mm}'}" FontSize="10" Foreground="DarkGray"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- プロファイル詳細 -->
                <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="5">
                    <StackPanel DataContext="{Binding SelectedProfile}">
                        <TextBlock Text="プロファイル詳細" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="ProcessDeviceStartL:" Margin="0,2"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ProcessDeviceStartL}" Margin="0,2"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="DetailDeviceStartL:" Margin="0,2"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding DetailDeviceStartL}" Margin="0,2"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="OperationDeviceStartM:" Margin="0,2"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding OperationDeviceStartM}" Margin="0,2"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="CylinderDeviceStartM:" Margin="0,2"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CylinderDeviceStartM}" Margin="0,2"/>
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="CylinderDeviceStartD:" Margin="0,2"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding CylinderDeviceStartD}" Margin="0,2"/>
                            
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="ErrorDeviceStartM:" Margin="0,2"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding ErrorDeviceStartM}" Margin="0,2"/>
                            
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="ErrorDeviceStartT:" Margin="0,2"/>
                            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding ErrorDeviceStartT}" Margin="0,2"/>
                            
                            <TextBlock Grid.Row="7" Grid.Column="0" Text="DeviceStartT:" Margin="0,2"/>
                            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding DeviceStartT}" Margin="0,2"/>
                            
                            <TextBlock Grid.Row="8" Grid.Column="0" Text="TimerStartZR:" Margin="0,2"/>
                            <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding TimerStartZR}" Margin="0,2"/>
                            
                            <TextBlock Grid.Row="9" Grid.Column="0" Text="ProsTimeStartZR:" Margin="0,2"/>
                            <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding ProsTimeStartZR}" Margin="0,2"/>
                            
                            <TextBlock Grid.Row="10" Grid.Column="0" Text="ProsTimePreviousStartZR:" Margin="0,2"/>
                            <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding ProsTimePreviousStartZR}" Margin="0,2"/>
                            
                            <TextBlock Grid.Row="11" Grid.Column="0" Text="CyTimeStartZR:" Margin="0,2"/>
                            <TextBox Grid.Row="11" Grid.Column="1" Text="{Binding CyTimeStartZR}" Margin="0,2"/>
                        </Grid>
                        
                        <!-- Memoryテーブルレコード数予測 -->
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,20,0,0">
                            <StackPanel>
                                <TextBlock Text="Memoryテーブルレコード数予測" FontWeight="Bold" Margin="0,0,0,10"/>
                                <TextBlock Text="{Binding DataContext.MemoryRecordSummary, RelativeSource={RelativeSource AncestorType=Window}}" 
                                          TextWrapping="Wrap" LineHeight="20"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- デバイス重複チェック -->
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="デバイスアドレス重複チェック" FontWeight="Bold" Margin="0,0,0,10"/>
                                <ItemsControl ItemsSource="{Binding DataContext.DeviceOverlaps, RelativeSource={RelativeSource AncestorType=Window}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="Red" BorderThickness="1" CornerRadius="3" Padding="5" Margin="0,2" Background="#FFFEEEE">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Message}" Foreground="Red" FontWeight="Bold"/>
                                                    <TextBlock>
                                                        <TextBlock.Text>
                                                            <MultiBinding StringFormat="  {0}: {1}">
                                                                <Binding Path="Category1"/>
                                                                <Binding Path="Range1"/>
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                    <TextBlock>
                                                        <TextBlock.Text>
                                                            <MultiBinding StringFormat="  {0}: {1}">
                                                                <Binding Path="Category2"/>
                                                                <Binding Path="Range2"/>
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <TextBlock Text="重複がありません" Foreground="Green" Margin="0,5,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.DeviceOverlaps.Count, RelativeSource={RelativeSource AncestorType=Window}}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        
                        <!-- プロファイル操作ボタン -->
                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <Button Content="このプロファイルを読み込む" Command="{Binding DataContext.LoadProfileCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                    Width="150" Height="30" Margin="0,0,5,0"/>
                            <Button Content="現在の設定で更新" Command="{Binding DataContext.UpdateProfileCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                    Width="120" Height="30" Margin="0,0,5,0"/>
                            <Button Content="削除" Command="{Binding DataContext.DeleteProfileCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                    Width="60" Height="30" Background="LightPink"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </GroupBox>
        
        <!-- 新規プロファイル作成 -->
        <GroupBox Grid.Row="2" Header="新規プロファイル作成" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="名前:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Grid.Column="1" Text="{Binding NewProfileName}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                
                <TextBlock Grid.Column="2" Text="説明:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Grid.Column="3" Text="{Binding NewProfileDescription}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                
                <Button Grid.Column="4" Content="現在の設定を保存" Command="{Binding SaveCurrentAsProfileCommand}" 
                        Width="120" Height="30"/>
            </Grid>
        </GroupBox>
        
        <!-- 閉じるボタン -->
        <Button Grid.Row="3" Content="閉じる" Click="CloseButton_Click" 
                Width="100" Height="30" HorizontalAlignment="Right"/>
    </Grid>
</Window>

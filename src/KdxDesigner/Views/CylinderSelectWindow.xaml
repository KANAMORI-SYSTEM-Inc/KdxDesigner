<Window x:Class="KdxDesigner.Views.CylinderSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="シリンダー選択" Height="450" Width="600" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="インターロック設定を行うシリンダーを選択してください"
                   FontSize="14" FontWeight="Bold" Margin="10"/>

        <!-- Cylinder List -->
        <DataGrid Grid.Row="1" Name="CylinderDataGrid"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  Margin="10"
                  MouseDoubleClick="CylinderDataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="CYNum" Binding="{Binding CYNum}" Width="100"/>
                <DataGridTextColumn Header="PUCO" Binding="{Binding PUCO}" Width="100"/>
                <DataGridTextColumn Header="Go" Binding="{Binding Go}" Width="100"/>
                <DataGridTextColumn Header="Back" Binding="{Binding Back}" Width="100"/>
                <DataGridTextColumn Header="OilNum" Binding="{Binding OilNum}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="選択" Width="80" Height="30" Margin="5" Click="OKButton_Click"/>
            <Button Content="キャンセル" Width="80" Height="30" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
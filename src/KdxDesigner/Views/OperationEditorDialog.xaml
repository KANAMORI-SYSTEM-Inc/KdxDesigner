<Window x:Class="KdxDesigner.Views.OperationEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Operation編集" Height="600" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <Border Grid.Row="0" Background="LightGray" Padding="10" Margin="0,0,0,10">
            <TextBlock Text="{Binding OperationTitle}" FontSize="16" FontWeight="Bold"/>
        </Border>

        <!-- メインコンテンツ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 基本情報 -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Operation名:" VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding OperationName}" Margin="5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="CY ID:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CYId}" Margin="5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="カテゴリID:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CategoryId}" Margin="5"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="CycleId:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CycleId}" Margin="5"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="ソート番号:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding SortNumber}" Margin="5"/>

                <!-- 動作設定 -->
                <Separator Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,10"/>
                <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Text="動作設定" FontWeight="Bold" Margin="5"/>

                <TextBlock Grid.Row="7" Grid.Column="0" Text="Stay:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding Stay}" Margin="5"/>

                <TextBlock Grid.Row="8" Grid.Column="0" Text="GoBack:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding GoBack}" Margin="5"/>

                <TextBlock Grid.Row="9" Grid.Column="0" Text="Start:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="9" Grid.Column="1" Text="{Binding Start}" Margin="5"/>

                <TextBlock Grid.Row="10" Grid.Column="0" Text="Finish:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="10" Grid.Column="1" Text="{Binding Finish}" Margin="5"/>

                <TextBlock Grid.Row="11" Grid.Column="0" Text="Valve1:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="11" Grid.Column="1" Text="{Binding Valve1}" Margin="5"/>

                <!-- センサー設定 -->
                <Separator Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,10"/>
                <TextBlock Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="2" Text="センサー設定" FontWeight="Bold" Margin="5"/>

                <Grid Grid.Row="14" Grid.Column="0" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- S1-S5 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="S1:" Margin="5"/>
                    <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding S1}" Margin="5"/>

                    <TextBlock Grid.Row="0" Grid.Column="1" Text="S2:" Margin="5"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding S2}" Margin="5"/>

                    <TextBlock Grid.Row="0" Grid.Column="2" Text="S3:" Margin="5"/>
                    <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding S3}" Margin="5"/>

                    <TextBlock Grid.Row="0" Grid.Column="3" Text="S4:" Margin="5"/>
                    <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding S4}" Margin="5"/>

                    <TextBlock Grid.Row="0" Grid.Column="4" Text="S5:" Margin="5"/>
                    <TextBox Grid.Row="1" Grid.Column="4" Text="{Binding S5}" Margin="5"/>

                    <!-- SS1-SS4 -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="SS1:" Margin="5"/>
                    <TextBox Grid.Row="3" Grid.Column="0" Text="{Binding SS1}" Margin="5"/>

                    <TextBlock Grid.Row="2" Grid.Column="1" Text="SS2:" Margin="5"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SS2}" Margin="5"/>

                    <TextBlock Grid.Row="2" Grid.Column="2" Text="SS3:" Margin="5"/>
                    <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding SS3}" Margin="5"/>

                    <TextBlock Grid.Row="2" Grid.Column="3" Text="SS4:" Margin="5"/>
                    <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding SS4}" Margin="5"/>
                </Grid>

                <!-- その他設定 -->
                <Separator Grid.Row="15" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,10"/>
                <TextBlock Grid.Row="16" Grid.Column="0" Grid.ColumnSpan="2" Text="その他設定" FontWeight="Bold" Margin="5"/>

                <TextBlock Grid.Row="17" Grid.Column="0" Text="PIL:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="17" Grid.Column="1" Text="{Binding PIL}" Margin="5"/>

                <TextBlock Grid.Row="18" Grid.Column="0" Text="SC:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="18" Grid.Column="1" Text="{Binding SC}" Margin="5"/>

                <TextBlock Grid.Row="19" Grid.Column="0" Text="FC:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="19" Grid.Column="1" Text="{Binding FC}" Margin="5"/>

                <TextBlock Grid.Row="20" Grid.Column="0" Text="Con:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="20" Grid.Column="1" Text="{Binding Con}" Margin="5"/>
            </Grid>
        </ScrollViewer>

        <!-- ボタン -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="保存" Width="100" Height="30" Margin="5" Command="{Binding SaveCommand}"/>
            <Button Content="キャンセル" Width="100" Height="30" Margin="5" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="KdxDesigner.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KdxDesigner.Views"
        xmlns:converters="clr-namespace:KdxDesigner.Utils.Converters"
        mc:Ignorable="d"
        Title="KDX Designer - サインイン" 
        Height="920" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel>
                <TextBlock Text="KDX Designer" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="メールアドレスでサインイン"
                          FontSize="16"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Login Form -->
        <Grid Grid.Row="1" Margin="40,30">
            <StackPanel VerticalAlignment="Center">
                <!-- Sign In / Sign Up Toggle -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <RadioButton x:Name="SignInMode" Content="サインイン" IsChecked="True" Margin="0,0,20,0" 
                                FontSize="14" GroupName="AuthMode" Foreground="#333333" FontWeight="SemiBold"/>
                    <RadioButton x:Name="SignUpMode" Content="新規登録" FontSize="14" GroupName="AuthMode" 
                                Foreground="#333333" FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Email Authentication Section -->
                <Border Background="White" 
                       CornerRadius="8" 
                       Padding="25,20"
                       BorderBrush="#DDDDDD"
                       BorderThickness="1"
                       Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock TextAlignment="Center"
                                  FontSize="18"
                                  FontWeight="SemiBold"
                                  Foreground="#333333"
                                  Margin="0,0,0,15">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="メールアドレスでサインイン"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=SignUpMode, Path=IsChecked}" Value="True">
                                            <Setter Property="Text" Value="新規アカウント作成"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Email Input -->
                        <TextBlock Text="メールアドレス" 
                                  FontSize="14"
                                  Foreground="#666666"
                                  Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                Height="45"
                                Padding="15,12"
                                FontSize="14"
                                BorderBrush="#DDDDDD"
                                BorderThickness="1"
                                Margin="0,0,0,15">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}"
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                       CornerRadius="6">
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                Focusable="false"
                                                                HorizontalScrollBarVisibility="Hidden"
                                                                VerticalScrollBarVisibility="Hidden"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <!-- Confirm Password Input (Only for Sign Up) -->
                        <TextBlock Text="パスワード（確認）" 
                                  FontSize="14"
                                  Foreground="#666666"
                                  Margin="0,0,0,5"
                                  Visibility="{Binding ElementName=SignUpMode, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <PasswordBox x:Name="ConfirmPasswordBox"
                                    Height="45"
                                    Padding="15,12"
                                    FontSize="14"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="1"
                                    Margin="0,0,0,12"
                                    Visibility="{Binding ElementName=SignUpMode, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <PasswordBox.Style>
                                <Style TargetType="PasswordBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="PasswordBox">
                                                <Border Background="{TemplateBinding Background}"
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                       CornerRadius="6">
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                Focusable="false"
                                                                HorizontalScrollBarVisibility="Hidden"
                                                                VerticalScrollBarVisibility="Hidden"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </PasswordBox.Style>
                        </PasswordBox>

                        <!-- Password Input -->
                        <TextBlock Text="パスワード" 
                                  FontSize="14"
                                  Foreground="#666666"
                                  Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PasswordBox"
                                    Height="45"
                                    Padding="15,12"
                                    FontSize="14"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="1"
                                    Margin="0,0,0,15">
                            <PasswordBox.Style>
                                <Style TargetType="PasswordBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="PasswordBox">
                                                <Border Background="{TemplateBinding Background}"
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                       CornerRadius="6">
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                Focusable="false"
                                                                HorizontalScrollBarVisibility="Hidden"
                                                                VerticalScrollBarVisibility="Hidden"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </PasswordBox.Style>
                        </PasswordBox>

                        <!-- Email Sign In/Up Button -->
                        <Button Height="50"
                               Background="#2196F3"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="SemiBold"
                               BorderThickness="0"
                               Cursor="Hand"
                               IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Content" Value="サインイン"/>
                                    <Setter Property="Command" Value="{Binding SignInWithEmailCommand}"/>
                                    <Setter Property="CommandParameter" Value="{Binding ElementName=PasswordBox}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="6"
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#1976D2"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#1565C0"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Background" Value="#CCCCCC"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=SignUpMode, Path=IsChecked}" Value="True">
                                            <Setter Property="Content" Value="新規登録"/>
                                            <Setter Property="Command" Value="{Binding SignUpWithEmailCommand}"/>
                                            <Setter Property="CommandParameter" Value="{Binding ElementName=PasswordBox}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Status Message -->
                <TextBlock Text="{Binding StatusMessage}"
                          Foreground="#2196F3"
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          Margin="0,20,0,0"
                          FontSize="14"
                          Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}"
                          Foreground="Red"
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          Margin="0,10,0,0"
                          FontSize="14"
                          Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Loading Indicator -->
                <ProgressBar IsIndeterminate="True"
                           Height="4"
                           Margin="0,20,0,0"
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            </StackPanel>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" 
               Background="#EEEEEE" 
               Padding="10">
            <TextBlock Text="© 2024 KANAMORI SYSTEM Inc." 
                      HorizontalAlignment="Center"
                      Foreground="#666666"
                      FontSize="11"/>
        </Border>
    </Grid>
</Window>

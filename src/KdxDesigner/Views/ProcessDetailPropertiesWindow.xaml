<Window x:Class="KdxDesigner.Views.ProcessDetailPropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="工程詳細プロパティ" Height="700" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="工程詳細プロパティ" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- ID (読み取り専用) -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="ID:"/>
                    <TextBox Grid.Column="1" Text="{Binding Id}" IsReadOnly="True" Background="#F0F0F0"/>
                </Grid>

                <!-- 詳細名 -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="詳細名:"/>
                    <TextBox Grid.Column="1" Text="{Binding DetailName}"/>
                </Grid>

                <!-- 工程ID (読み取り専用) -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="工程ID:"/>
                    <TextBox Grid.Column="1" Text="{Binding ProcessId}" IsReadOnly="True" Background="#F0F0F0"/>
                </Grid>

                <!-- 操作 -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="操作:"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding Operations}"
                              SelectedValue="{Binding OperationId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="OperationName"/>
                </Grid>

                <!-- 開始センサー -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="開始センサー:"/>
                    <TextBox Grid.Column="1" Text="{Binding StartSensor}"/>
                </Grid>

                <!-- カテゴリ -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="カテゴリ:"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding ProcessDetailCategories}"
                              SelectedValue="{Binding CategoryId}"
                              SelectedValuePath="Id"
                              DisplayMemberPath="CategoryName"/>
                </Grid>

                <!-- 終了センサー -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="終了センサー:"/>
                    <TextBox Grid.Column="1" Text="{Binding FinishSensor}"/>
                </Grid>

                <!-- ブロック番号 -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="ブロック番号:"/>
                    <TextBox Grid.Column="1" Text="{Binding BlockNumber}"/>
                </Grid>

                <!-- スキップモード -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="スキップモード:"/>
                    <TextBox Grid.Column="1" Text="{Binding SkipMode}"/>
                </Grid>

                <!-- サイクルID -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="サイクルID:"/>
                    <TextBox Grid.Column="1" Text="{Binding CycleId}"/>
                </Grid>

                <!-- ソート番号 -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="ソート番号:"/>
                    <TextBox Grid.Column="1" Text="{Binding SortNumber}"/>
                </Grid>

                <!-- IL開始条件 -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="IL開始条件:"/>
                    <TextBox Grid.Column="1" Text="{Binding ILStart}"/>
                </Grid>

                <!-- 開始タイマーID -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="開始タイマーID:"/>
                    <TextBox Grid.Column="1" Text="{Binding StartTimerId}"/>
                </Grid>

                <!-- リセット後実行 -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="リセット後実行:"/>
                    <CheckBox Grid.Column="1" IsChecked="{Binding IsResetAfter}" VerticalAlignment="Center"/>
                </Grid>

                <!-- コメント -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="コメント:"/>
                    <TextBox Grid.Column="1" Text="{Binding Comment}"
                             TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto" MinHeight="60"/>
                </Grid>

                <!-- 接続先ProcessDetail（マルチセレクト） -->
                <Border BorderBrush="Gray" BorderThickness="1" Margin="0,10,0,5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="接続先工程詳細" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <TextBlock Text="（同一サイクル内の工程詳細のみ表示されます）" FontSize="11" Foreground="Gray" Margin="0,0,0,5"/>
                        <ListBox ItemsSource="{Binding AvailableProcessDetails}" Height="150">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="5">
                                        <TextBlock>
                                            <Run Text="{Binding ProcessDetail.DetailName, Mode=OneWay}"/>
                                            <Run Text=" (ID: " Foreground="Gray"/>
                                            <Run Text="{Binding ProcessDetail.Id, Mode=OneWay}" Foreground="Gray"/>
                                            <Run Text=")" Foreground="Gray"/>
                                        </TextBlock>
                                    </CheckBox>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>

                <!-- 終了条件ProcessDetail（マルチセレクト） -->
                <Border BorderBrush="DarkOrange" BorderThickness="1" Margin="0,10,0,5" Padding="10">
                    <StackPanel>
                        <TextBlock Text="終了条件工程詳細" FontWeight="Bold" FontSize="14" Margin="0,0,0,10" Foreground="DarkOrange"/>
                        <TextBlock Text="（期間工程や工程OFF確認で使用する終了条件）" FontSize="11" Foreground="Gray" Margin="0,0,0,5"/>
                        <ListBox ItemsSource="{Binding AvailableFinishProcessDetails}" Height="150">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="5">
                                        <TextBlock>
                                            <Run Text="{Binding ProcessDetail.DetailName, Mode=OneWay}"/>
                                            <Run Text=" (ID: " Foreground="Gray"/>
                                            <Run Text="{Binding ProcessDetail.Id, Mode=OneWay}" Foreground="Gray"/>
                                            <Run Text=")" Foreground="Gray"/>
                                        </TextBlock>
                                    </CheckBox>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- ボタン -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="保存" Width="80" Margin="5" Command="{Binding SaveCommand}"/>
            <Button Content="キャンセル" Width="80" Margin="5" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>

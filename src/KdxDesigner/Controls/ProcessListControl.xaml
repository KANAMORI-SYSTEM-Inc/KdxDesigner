                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>
                </DataGridComboBoxColumn>
                <DataGridTextColumn Header="TestStart" Binding="{Binding TestStart}" Width="100"/>
                <DataGridTextColumn Header="TestCondition" Binding="{Binding TestCondition}" Width="120"/>
                <DataGridTextColumn Header="TestMode" Binding="{Binding TestMode}" Width="100"/>
                <DataGridTextColumn Header="AutoMode" Binding="{Binding AutoMode}" Width="100"/>
                <DataGridTextColumn Header="AutoStart" Binding="{Binding AutoStart}" Width="100"/>
                <DataGridTextColumn Header="ILStart" Binding="{Binding ILStart}" Width="100"/>
                <DataGridTextColumn Header="Comment1" Binding="{Binding Comment1}" Width="150"/>
                <DataGridTextColumn Header="Comment2" Binding="{Binding Comment2}" Width="150"/>
                <DataGridTextColumn Header="SortNumber" Binding="{Binding SortNumber}" Width="100"/>
            </DataGrid.Columns>

                <DataGridTextColumn Header="ProcessName" Binding="{Binding ProcessName}" Width="150"/>
                <DataGridTextColumn Header="CycleId" Binding="{Binding CycleId}" Width="70"/>
                <DataGridComboBoxColumn Header="Category"

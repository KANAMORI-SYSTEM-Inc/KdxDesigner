<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <!-- 優先順位1: GitHub Packages（本番用） -->
    <add key="KdxGitHub" value="https://nuget.pkg.github.com/KANAMORI-SYSTEM-Inc/index.json" />

    <!-- 優先順位2: NuGet.org（外部パッケージ） -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />

    <!-- 優先順位3: ローカルフィード（テスト・開発用） -->
    <!-- ローカル開発時のみコメント解除してください -->
    <!-- <add key="KdxLocal" value="C:\NuGetLocal" /> -->
  </packageSources>

  <packageSourceCredentials>
    <KdxGitHub>
      <add key="Username" value="KANAMORI-SYSTEM-Inc" />
      <add key="ClearTextPassword" value="%GITHUB_PACKAGES_TOKEN%" />
    </KdxGitHub>
  </packageSourceCredentials>
</configuration>
